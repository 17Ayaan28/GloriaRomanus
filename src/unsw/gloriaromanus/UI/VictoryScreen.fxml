<VBox maxHeight="300.0" maxWidth="500.0" spacing="10" styleClass="panel-region" stylesheets="/unsw/gloriaromanus/UI/style.css" StackPane.alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unsw.gloriaromanus.UI.VictoryScreenController">
   <padding>
      <Insets topRightBottomLeft="10" />
   </padding>
   <background>
      <Background>
         <fills>
            <BackgroundFill>
               <fill>
                  <Color opacity="0.7" />
               </fill>
            </BackgroundFill>
         </fills>
      </Background>
   </background>
   <children>
      <Pane fx:id="buildingPane" prefHeight="300.0" prefWidth="500.0">
         <children>
            <Label layoutX="145.0" layoutY="83.0" text="VICTORY" textFill="#3d9a4b">
               <font>
                  <Font name="Impact" size="56.0" />
               </font>
            </Label>
            <Button layoutX="197.0" layoutY="223.0" mnemonicParsing="false" onAction="#continueButtonPress" prefHeight="27.0" prefWidth="86.0" text="Continue" />
            <Label fx:id="playerLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="145.0" layoutY="140.0" prefHeight="37.0" prefWidth="190.0" text="Good Job, Player X!" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Impact" size="21.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
</VBox>
